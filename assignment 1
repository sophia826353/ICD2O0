// Problem 2 
    Scanner reader = new (System.in);
    System.out.println ("Probem 2, find the area of a circle");
    System.out.print ("Enter Radius:"); 
    double radius = reader.nextDouble(); 
    double circleArea = Math.PI*radius*radius; 
    System.out.printtf ("The area of the circle is %.2f/n", circleArea); 

// Problem 3 
    scanner reader = new (System.in);
    System.out.println ("Problem 3, find the surface area and volume of cylinder"); 
    System.out.print ("Enter Height: ") 
    double height = read.nextdouble(); 
    System.out.print("Enter radius: "); 
    radius = reader.nextDouble();
// Volume 
     double volume = Math.PI * radius * radius * height; 
     System.out.printf("The Volume is %.2f/n", volume); 
// Surface area 
     double surfaceArea = (2 * Math.PI * radius * height) + ( 2 * Math.PI * radius * radius ); 
     System.out.printf(The surface area is: %.2f/n", surfaceArea);
// Problem 4 
