import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    Scanner kbd = new Scanner(System.in);
    String greeting = new String();

    System.out.print("Hi. Please enter a greeting in one word: ");
    greeting = kbd.nextLine();
    String OneWordGreeting = greeting.split(" ")[0];
    System.out.printf("You said: %s.\n", OneWordGreeting);
    System.out.println("Hi. Please enter a greeting in more than one word: ");
    greeting = kbd.nextLine();
    System.out.printf("You said: %s.\n", greeting);
  }
}
