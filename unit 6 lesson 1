import java.util.Scanner;

class Main {
 public static void main(String[] args) {
   Scanner sc = new Scanner(System.in);
   System.out.print("Please enter a probability as a decimal: ");
   Double number = sc.nextDouble();

   if (number < 0.07) {
     System.out.println(  "The forcast is Dry weather.");
   } else if (number > 0.06) {
     System.out.println( "The forcast is small chance of rain.");
   } else if (number < 0.06 && number > 0.07) {
     System.out.println( "The forcast is rain.");
   }  
   }
